# Example environment variables for Trade-Mart with Firebase
# Copy this file to .env for local development

# Flask secret key (generate a secure random key for production)
SECRET_KEY=trademartkey123

# Firebase Service Account Key Path (optional - defaults to trade_mart/serviceAccountKey.json)
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/your/serviceAccountKey.json

# Set to False in production
DEBUG=False